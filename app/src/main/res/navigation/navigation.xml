<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.fooddeliveryapp.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.fooddeliveryapp.ui.restaurantlisting.RestaurantListingFragment"
        android:label="RestaurantListingFragment">
        <action
            android:id="@+id/action_homeFragment_to_restaurantDetailFragment"
            app:destination="@id/restaurantDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/restaurantDetailFragment"
        android:name="com.example.fooddeliveryapp.ui.restaurantdetail.RestaurantDetailsFragment"
        android:label="RestaurantDetailFragment">
        <action
            android:id="@+id/action_restaurantDetailFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
        <action
            android:id="@+id/action_restaurantDetailFragment_to_restaurantAddFragment"
            app:destination="@id/restaurantAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.fooddeliveryapp.ui.meal.MealDetailsFragment"
        android:label="MealDetailsFragment">
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.fooddeliveryapp.ui.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_loginAndSignupFragment"
            app:destination="@id/loginAndSignupFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginAndSignupFragment"
        android:name="com.example.fooddeliveryapp.ui.login.LoginAndSignupFragment"
        android:label="LoginAndSignupFragment"
        tools:layout="@layout/fragment_login_and_signup" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.fooddeliveryapp.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/restaurantAddFragment"
        android:name="com.example.fooddeliveryapp.ui.restaurantadd.RestaurantAddFragment"
        android:label="RestaurantAddFragment" />

</navigation>