<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.fooddeliveryapp.ui.restaurantlisting.RestaurantListingFragment"
        android:label="RestaurantListingFragment">
        <action
            android:id="@+id/action_homeFragment_to_restaurantDetailFragment"
            app:destination="@id/restaurantDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantDetailFragment"
        android:name="com.example.fooddeliveryapp.ui.restaurantdetail.RestaurantDetailsFragment"
        android:label="RestaurantDetailFragment">
        <action
            android:id="@+id/action_restaurantDetailFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.fooddeliveryapp.ui.restaurantdetail.MealDetailsFragment"
        android:label="MealDetailsFragment">

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.fooddeliveryapp.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />

</navigation>